@using Domain.ViewModels;
@{
    @model List<Domain.ViewModels.ViewEmployee>

    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@user.employeeName</h5>
                        <p class="card-text"><strong>Email:</strong> @user.employeeEmail</p>
                        <p class="card-text"><strong>DOB:</strong> @user.employeeDOB.ToShortDateString()</p>
                        <p class="card-text"><strong>Address:</strong> @user.employeeAddress</p>
                        <p class="card-text"><strong>Gender:</strong> @user.employeeGender</p>
                        <p class="card-text"><strong>Role:</strong> @user.employeeRole</p>
                        <p class="card-text"><strong>Phone:</strong> @user.employeePhoneNumber</p>
                        <a href="@Url.Action("UserProfile", new { id = user.employeeId })" class="btn btn-primary">View Profile</a>
                    </div>
                </div>
            </div>
        }
    </div>

}
