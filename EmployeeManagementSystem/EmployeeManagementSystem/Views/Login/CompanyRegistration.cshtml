@model Domain.ViewModels.CompanyRegistration

@{
    ViewData["Title"] = "Register";
}
<div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
</div>

<!DOCTYPE html>
<html lang="en">
<head>
   
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="@Url.Content("~/css/CompanyRegistration.css")" asp-append-version="true"/>
    <style>
        .field-validation-error {
            color: red;
            font-size: smaller;
        }
    </style>
</head>
<body>
    <h1>Register your Company!</h1>
    <form asp-action="CompanyRegistration" method="post" id="companyRegistrationForm">
        <div class="form-group">
            <label for="CompanyName">Company Name</label>
            <input type="text" class="form-control" id="CompanyName" name="CompanyName" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="DateOfEstablishment">Date of Establishment</label>
            <input type="date" class="form-control" id="DateOfEstablishment" name="DateOfEstablishment" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="Industry">Industry</label>
            <input type="text" class="form-control" id="Industry" name="Industry" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="Location">Location</label>
            <input type="text" class="form-control" id="Location" name="Location" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="Country">Country</label>
            <input type="text" class="form-control" id="Country" name="Country" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="Website">Website</label>
            <input type="url" class="form-control" id="Website" name="Website" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="Phone">Phone</label>
            <input type="tel" class="form-control" id="Phone" name="Phone" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" name="Email" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="DomainName">Domain Name</label>
            <input type="text" class="form-control" id="DomainName" name="DomainName" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="Password">Password</label>
            <input type="password" class="form-control" id="Password" name="Password" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <label for="Address">Address</label>
            <input type="text" class="form-control" id="Address" name="Address" required>
            <div class="invalid-feedback" style="display: none;"></div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Register</button>
        </div>
    </form>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="companyRegistrationValidation.js"></script>
</body>
</html>


