@using Domain.ViewModels;
@{

    Layout = "../Shared/_LayoutAdmin.cshtml";
}
@model Domain.ViewModels.AddLeaveView;

    <!DOCTYPE html>
    <head>
        
        <title>Leave Form</title>
        <link rel="stylesheet" href="@Url.Content("~/css/LeavePage.css")">
    </head>
    <body>
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ExceptionError"]
            </div>
        }
        @if (TempData["Leaves Added"] != null)
        {
            <div class="alert alert-success">
                @TempData["Leaves Added"]
            </div>
        }
    
        <div class="container">
            <div class="form-container">
                <h1>Add your Leaves</h1>
                <form asp-controller="LeaveManage"  asp-action="CreateLeaves" method="POST" id="leaveForm">
                    <div class="form-section">
                        <div class="form-section-header">To add the leaves fill the form below ! Kindly check the table below for the leaves already present and adjust it according to your requirements. </div>
                        <div class="form-group">
                            <label asp-for="LeaveName">Leave Name</label>
                            <input type="text" id="LeaveName" name="LeaveName" required>
                        </div>

                        <div class="form-group">
                            <label asp-for="LeaveQuota">Leave Quota</label>
                            <input type="number" id="LeaveQuota" name="LeaveQuota" required>
                        </div>

                        <div class="form-group">
                            <label asp-for="LeaveDescription">Leave Description</label>
                            <textarea id="LeaveDescription" name="LeaveDescription" required></textarea>
                        </div>

                    </div>
                    <button type="submit" class="btn-primary">Submit</button>
                </form>
            </div>

            <h2>Leaves</h2>
            <div id="leavesTableContainer">
                @await Html.PartialAsync("_LeaveTable", ViewBag.LeavesView as List<TypesOfLeave>)
            </div>
            
        </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/js/leavePage.js"></script>
    </body>


