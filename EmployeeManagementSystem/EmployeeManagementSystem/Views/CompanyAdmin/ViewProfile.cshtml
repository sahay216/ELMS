@using Domain.ViewModels;
@model Domain.ViewModels.CompanyProfileView

@{
    ViewData["Title"] = "Company Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <h2>@Model.CompanyName</h2>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Date of Establishment</label>
                                <p>
                                    @if (Model.DateOfEstablishment.HasValue)
                                    {
                                        @Model.DateOfEstablishment.Value.ToDateTime(TimeOnly.MinValue).ToString("yyyy-MM-dd")
                                    }
                                    else
                                    {
                                        <text>Not specified</text>
                                    }
                                </p>
                            </div>
                            <div class="form-group">
                                <label>Industry</label>
                                <p>@Model.Industry</p>
                            </div>
                            <div class="form-group">
                                <label>Number of Employees</label>
                                <p>@Model.NumberOfEmployees ?? "Not specified"</p>
                            </div>
                            <div class="form-group">
                                <label>Location</label>
                                <p>@Model.Location</p>
                            </div>
                            <div class="form-group">
                                <label>Country</label>
                                <p>@Model.Country</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Website</label>
                                <p><a href="@Model.Website" target="_blank">@Model.Website</a></p>
                            </div>
                            <div class="form-group">
                                <label>Email</label>
                                <p>@Model.Email</p>
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <p>@Model.Phone</p>
                            </div>
                            <div class="form-group">
                                <label>Address</label>
                                <p>@Model.Address</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .card {
            border: 1px solid #e3e3e3;
            border-radius: 8px;
        }

        .card-header {
            background-color: #f7f7f7;
            border-bottom: 1px solid #e3e3e3;
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            padding: 15px 20px;
            font-size: 24px;
        }

        .card-body {
            padding: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
        }

        p {
            margin-bottom: 0;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
}
